{% extends "base.html" %}
{% block content %}
    <form action="/cluster" method="POST">
      <table>
        <tr>
          <td>
            <strong>
              Session Type:
            </strong>
          </td>
          <td>
            <select name="type" width="300px">
            {% for o in option_list %}
              <option value="{{ o.name }}">{{ o.name }}</option>
            {% endfor %}
            </select>
          </td>
        </tr>     
        <tr>
          <td>
            <strong>
              Sentiment:
            </strong>
          </td>
          <td>
            <select name="data-set">
              <option value="negative">Negative Comments</option>
              <option value="positive">Positive Comments</option>
              <option value="polar">All Comments</option>
            </select>
          </td>
        </tr>
        <tr>
          <td>
            <strong>
              Epsilon:
            </strong>
          </td>
          <td>
<br />
      <select name="data-set">
        <option value="negative">Negative Comments</option>
        <option value="positive">Positive Comments</option>
        <option value="polar">All Comments</option>
      </select>
      <input type="text" name="epsilon" value="0.75" />
          </td>
        </tr>
        <tr>
          <td>
            <strong>
              Samples:
            </strong>
          </td>
          <td>
          </td>
        </tr>
      <input type="text" name="samples" value="5" />
      <br >
      <input type="submit" value="Submit" />	
    </form>
    {% for cluster in clusters %}
    <div><p>{{ cluster.name }}: <b>{{cluster.centroid }}</b></p></div>
    {% endfor %}
{% endblock %}
